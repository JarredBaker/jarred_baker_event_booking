<div class="p-8">
  <div class="w-100 flex justify-end">
    <%= link_to "New Event", new_event_path, class: 'button-primary mt-4' %>
  </div>

  <div class="grid grid-cols-4 mt-4 gap-4">
    <% @events.each do |event| %>
      <% cache event do %>
        <div class="card break-all">
          <p class="text-2xl font-medium pb-4"><%= event.name %></p>
          <p><%= event.description %></p>
          <p><%= event.date.in_time_zone(Time.zone).strftime('%B %d, %Y %I:%M %p') %></p>
          <p>Tickets remaining: <%= event.tickets_available %></p>
          <br/>
          <%= link_to "View", event_path(event), class: 'button-primary' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>